<div class="game">

  <div class="cards">
    {{#each cards}}
      <div class="card">{{this.number}}</div>
    {{/each}}
  </div>

  <div class="dice">
    {{#each dice}}
      <div class="die">{{this.showing}}</div>
    {{/each}}
  </div>

  <div class="controls">
    <button id="control-roll">Roll</button>
    <button id="control-end-turn">End Turn</button>
    <button id="control-end-game">End Game</button>
  </div>

</div>